<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- State when EditText is focused -->
    <item android:state_focused="true">
        <shape>
            <solid android:color="#121212" /> <!-- Background color -->
            <stroke
                android:width="2dp"
                android:color="@color/primary" /> <!-- Green border for focus -->
            <corners android:radius="4dp" />
        </shape>
    </item>

    <!-- State when EditText is pressed -->
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#121212" />
            <stroke
                android:width="1dp"
                android:color="#FFFF00" /> <!-- Yellow border when pressed -->
            <corners android:radius="4dp" />
        </shape>
    </item>

    <!-- Default state -->
    <item>
        <shape>
            <solid android:color="#121212" />
            <stroke
                android:width="1dp"
                android:color="#606060" /> <!-- Gray border for default -->
            <corners android:radius="4dp" />
        </shape>
    </item>
</selector>
